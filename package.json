{
  "name": "@limetech/po-linter",
  "version": "1.0.0",
  "description": "Checks for duplicate msgids in .po files to prevent translation issues.",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "bin": {
    "po-linter": "dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "ncc build index.js --license licenses.txt",
    "lint": "oxlint --config .oxlintrc.jsonc --ignore-path=.oxlintignore --max-warnings 0 . && prettier --check \"**/*.js\"",
    "lint:fix": "oxlint --config .oxlintrc.jsonc --ignore-path=.oxlintignore --max-warnings 0 --fix --fix-suggestions . && prettier --write \"**/*.js\"",
    "start": "npm run build",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "Lime Technologies",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lundalogik/po-linter.git"
  },
  "bugs": {
    "url": "https://github.com/Lundalogik/po-linter/issues"
  },
  "homepage": "https://github.com/Lundalogik/po-linter#readme",
  "overrides": {
    "glob": "^10.4.5"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "@vercel/ncc": "^0.38.3",
    "jest": "^30.0.4",
    "jest-cli": "^30.0.4",
    "oxlint": "^1.6.0",
    "pofile": "^1.1.4",
    "prettier": "^3.6.2"
  },
  "jest": {
    "coverageProvider": "v8",
    "coverageReporters": [
      "lcov",
      "text",
      [
        "text",
        { "file": "./coverage.txt" }
      ]
    ]
  }
}
